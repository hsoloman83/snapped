<div class="container text-center">

  <h3><%= @picture.title %></h3>
  <img src="<%= @picture.image_url %>" alt="<%= @picture.title %>" style="width: 500px;">

  <h3>Tags:</h3>
  <ul>
    <% @tags.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </ul>


  <h3>Comments:</h3>
  <ul>
    <% @comments.each do |comment| %>
      <li><%= comment.content %><%= button_to 'x', comment_path(comment), method: 'delete' %></li>

    <% end %>
  </ul>

  <h3>Add a Comment:</h3>

  <%= form_for @new_comment do |f| %>
    <%= f.text_area :content %>

    <%= f.hidden_field :picture_id, :value => @picture.id %>
    <%= f.hidden_field :user_id, :value => session[:user_id] %>

    <%= button_to('Add Comment', 'comment#create', method:'post') %>

  <% end %>
</div>
<%= button_to('Back', '/pictures', method: 'get') %>
<div class="bottom-buffer">

</div>
